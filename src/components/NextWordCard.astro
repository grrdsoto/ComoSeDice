---
import '../styles.css';
interface Props {
	wordClass: string;
}

const { wordClass } = Astro.props;
---

<div class="link-card" >
	<a>
		<h2 id="nextWordContainer" class="justify-center item-center">
			Como Se Dice gato?
		</h2>
		<p>
			{wordClass}
		</p>
	</a>
</div>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #65bfff;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: rgb(0, 0, 0);
		background-color: #65bfff;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
