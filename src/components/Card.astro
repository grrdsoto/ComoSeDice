---
interface Props {
	title: string;
	body: string;
	href: string;
}
import "../styles.css";
const { href, title, body } = Astro.props;
---

<li class="link-card box-content h-48">
	<a href={href} class=" content-center">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>

